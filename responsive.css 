/* Responsive enhancements for all devices */
:root {
    --vh: 1vh; /* For mobile viewport height fix */
    --animation-duration: 0.3s; /* Default animation speed */
}

/* Mobile-first responsive design */
@media (max-width: 480px) {
    .container {
        padding: 0 15px;
    }
    
    .dashboard-header {
        padding: 20px 0;
    }
    
    .dashboard-title h1 {
        font-size: 24px;
    }
    
    .stat-box {
        padding: 15px;
        min-width: 110px;
    }
    
    .stat-value {
        font-size: 20px;
    }
    
    .tasks-grid {
        grid-template-columns: 1fr;
        gap: 15px;
    }
    
    .task-card {
        margin-bottom: 10px;
    }
    
    .modal-content {
        margin: 10% auto;
        padding: 20px;
        width: 95%;
    }
    
    .upgrade-packages {
        grid-template-columns: 1fr;
    }
}

/* Tablet optimizations */
@media (min-width: 481px) and (max-width: 768px) {
    .tasks-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .upgrade-packages {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Touch device optimizations */
.touch-device .btn,
.touch-device .task-card,
.touch-device .package-card {
    transition: transform 0.1s ease, box-shadow 0.1s ease;
}

.touch-device .btn:active,
.touch-device .task-card:active,
.touch-device .package-card:active,
.touch-active {
    transform: scale(0.98);
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
}

/* Slow connection optimizations */
.slow-connection * {
    animation-duration: 0.1s !important;
    transition-duration: 0.1s !important;
}

.slow-connection .task-card:hover {
    transform: none;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    :root {
        --primary: #0000ff;
        --secondary: #ff0000;
        --success: #008000;
    }
    
    .task-card {
        border: 2px solid var(--dark);
    }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
    * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
    
    .task-card:hover {
        transform: none;
    }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
    :root {
        --dark: #f8f9fa;
        --light: #333;
        --light-gray: #555;
        --gray: #aaa;
    }
    
    body {
        background-color: #1a1a1a;
        color: var(--dark);
    }
    
    .task-card,
    .stat-box,
    .tasks-filter,
    .modal-content {
        background: #2d2d2d;
        color: var(--dark);
    }
}

/* Print styles */
@media print {
    .nav-links,
    .task-footer .btn,
    .upgrade-modal,
    .task-limit-indicator {
        display: none !important;
    }
    
    .task-card {
        break-inside: avoid;
        box-shadow: none;
        border: 1px solid #ccc;
    }
}